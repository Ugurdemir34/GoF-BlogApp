    <script>

        $(document).ready(function () {
            // Fill modal with content from link href
           
            $(".viewtags").on("click", function (e) {

                var id = this.id;
                var mymodal = $('#myModal');
                var html = '';
                console.log(id);
                $.ajax({
                    type: "GET",
                    url: "/Admin/ArticleTags?articleId=" + id,
                    dataType: 'json',
                    success: function (data) {
                        for (let i = 0; i < data.length; i++) {
                            html += "<button class='btn btn-outline-success'>" + data[i].tagName + "</button>"
                        }
                        mymodal.find('.modal-title').text('Tag Listesi');
                        mymodal.find('.modal-body').html(html);
                        mymodal.modal('show');
                    }
                });


            });
